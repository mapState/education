page {
  padding-bottom: 400rpx;
}
.list {
  width: 690rpx;
}
.block {
  width: 750rpx;
  height: 20rpx;
  background: #f2f2f2;
}
.titleBox {
  width: 100%;
  height: 110rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  border-bottom: 1px solid #ddd;
}
.titleBox text {
  display: block;
  width: 8rpx;
  height: 34rpx;
  background: #fdd30f;
  border-radius: 4rpx;
  margin-left: 30rpx;
  margin-right: 20rpx;
}
.titleBox view {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: black;
}
.textarea {
  width: 100%;
  background-color: #fff;
  width: 690rpx;
  padding: 40rpx 30rpx;
}
.textarea textarea {
  height: 160rpx;
}
.textarea .plClass {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #999999;
}
.addBtn {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding-bottom: 40rpx;
}
.addBtn .item {
  width: 160rpx;
  height: 170rpx;
  background: #f1f1f1;
  border-radius: 4rpx;
  margin-left: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.addBtn .item .addImg {
  width: 52rpx;
  height: 52rpx;
}
.addBtn .item .addVideo {
  width: 54rpx;
  height: 47rpx;
}
.post {
  position: fixed;
  left: 50%;
  bottom: 208rpx;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  width: 610rpx;
  height: 88rpx;
  background: #fdd30f;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: black;
  text-align: center;
  line-height: 88rpx;
}

