			"style": {
				"navigationStyle": "custom"
			}
		}, {
			"path": "pages/position/position",
			"style": {
				"navigationBarTitleText": "切换定位"
			}
		}, {
			"path": "pages/search/search",
			"style": {
				"navigationBarTitleText": "搜索活动"
			}
		}, {
			"path": "pages/eventsList/eventsList",
			"style": {
				"navigationBarTitleText": "活动列表"
			}
		}, {
			"path": "pages/activityDetails/activityDetails",
			"style": {
				"navigationStyle": "custom"
			}
		}, {
			"path": "pages/comment/comment",
			"style": {
				"navigationBarTitleText": "全部评价"
			}
		}, {
			"path": "pages/togetherInfo/togetherInfo",
			"style": {
				"navigationBarTitleText": "拼团信息"
			}
		}, {
			"path": "pages/headInfo/headInfo",
			"style": {
				"navigationStyle": "custom"
			}
		}, {
			"path": "pages/joinDetail/joinDetail",
			"style": {
				"navigationBarTitleText": "报名详情"
			}
		}, {
			"path": "pages/successful/successful",
			"style": {
				"navigationBarTitleText": "报名成功"
			}
		}
	    ,{
            "path" : "pages/course/course",
            "style" : {}
        }
    ],
	"subPackages": [{
		"root": "pagesA",
		"pages": [{
			"path": "list/list",
			"style": {}
		}]
	}, {
		"root": "pagesB",
		"pages": [{
			"path": "detail/detail",
			"style": {}
		}]
	}],
	"preloadRule": {
		"pagesA/list/list": {
			"network": "all",
			"packages": ["__APP__"]
		},
		"pagesB/detail/detail": {
			"network": "all",
			"packages": ["pagesA"]
		}
	},
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "",
		"navigationBarBackgroundColor": "#FDD30F",
		"backgroundColor": "#FDD30F"
	},
	"condition": { //模式配置，仅开发期间生效
		"current": 1, //当前激活的模式（list 的索引项）
		"list": [
			//{
			//         "name": "swiper", //模式名称
			//         "path": "pages/component/swiper/swiper", //启动页面，必选
			//         "query": "interval=4000&autoplay=false" //启动参数，在页面的onLoad函数里面得到。
			//     },
			{
				"name": "position",
				"path": "pages/position/position"
			}
		]
	},
	"rules": [{
		"action": "allow",
		"page": "*"
	}]
}
